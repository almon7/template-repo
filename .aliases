# The following aliases are provided for project level convenience.
# To load these aliases, run or add to your .bashrc:
# source .aliases

alias build='docker compose up --build'
alias down='docker compose down'
alias up='docker compose up'
alias app-bash='docker compose exec app bash'
alias format='docker compose exec app /bin/bash /app/src/scripts/format.sh'
alias code-checks='docker compose exec app /bin/bash /app/src/scripts/code-checks.sh'
alias run-tests='docker compose exec app /bin/bash /app/src/scripts/run-tests.sh'